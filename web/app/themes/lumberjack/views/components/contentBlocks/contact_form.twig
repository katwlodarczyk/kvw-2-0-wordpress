                     <span class="ml-3">
                        {{options.email}}
                    </span>
                </a>
            </dd>
          </div>
        </dl>
      </div>
    </div>
    <div class="py-16 px-4 sm:px-6 lg:col-span-3 lg:py-24 lg:px-8 xl:pl-12">
      <div class="max-w-lg mx-auto lg:max-w-none">
      {{page_block.form}}
      </div>
    </div>
  </div>
</div>
